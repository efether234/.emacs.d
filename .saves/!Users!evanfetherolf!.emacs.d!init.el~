(tool-bar-mode -1)
(scroll-bar-mode -1)

(setq ido-everywhere t)
(setq ido-enable-flex-matching t)
(ido-mode 1)

(add-hook 'prog-mode-hook 'display-line-numbers-mode)
(add-hook 'org-mode-hook 'toggle-truncate-lines-off)
(add-hook 'org-mode-hook 'visual-line-mode)

(delete-selection-mode t)
(show-paren-mode t)

(setq backup-directory-alist '(("." . "~/.emacs.d/.saves")))

;; Theme
(add-to-list 'default-frame-alist '(background-color . "#1c1c1c"))

(set-face-foreground 'line-number "#585858")
(set-face-foreground 'line-number-current-line "#c6c6c6")

(global-hl-line-mode t)
(set-face-background hl-line-face "#303030")

(set-face-foreground 'default "#f2f2f2")

(set-face-attribute 'region nil
		    :foreground "#f2f2f2"
		    :background "#626262")

;; Syntax Highlighting
;; 'font-lock-warning-face
(set-face-foreground 'font-lock-function-name-face "#5787af")
(set-face-foreground 'font-lock-variable-name-face "#ff5f5f")
(set-face-foreground 'font-lock-keyword-face "#87afd7")
(set-face-foreground 'font-lock-comment-face "#005f87")
;; 'font-lock-comment-delimiter-face
(set-face-foreground 'font-lock-type-face "#afd75f")
(set-face-foreground 'font-lock-constant-face "#ffaf5f")
(set-face-foreground 'font-lock-builtin-face "#00af5f")
;; 'font-lock-preprocessor-face
(set-face-foreground 'font-lock-string-face "#afd75f")
(set-face-foreground 'font-lock-doc-face "#c6c6c6")
;; 'font-lock-negation-char-face

(set-face-attribute 'mode-line nil
		    :foreground "#c6c6c6"
		    :background "#005f5f"
		    :box '(:line-width 8 :color "brightblue")
		    :overline nil
		    :underline nil)

(set-face-attribute 'mode-line-buffer-id nil
		    :foreground "#afd75f"
		    :background nil)

(set-face-attribute 'mode-line-emphasis nil
		    :foreground "#eeeeee")

(set-face-attribute 'mode-line-highlight nil
		    :foreground "#87afd7"
		    :box nil)

(set-face-attribute 'mode-line-inactive nil
		    :foreground "#005f87"
		    :background "#262626"
		    :box nil)
